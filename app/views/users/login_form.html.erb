<%= render 'home/form' %>
<main>
  <div class="main">
    <div class="container">
      <div class="content-body">
        <h2 class="d-ib">ログインする</h2>
        <a class="ml-10 td-ul" href="/users/new">新規ユーザー登録はこちら</a>
        <% if @error_message %>
          <span class="fc-red d-b"><%= @error_message %></span>
        <% end %>
        <div class="form">
          <%= form_tag("/login") do %>
          <table class="table-form">
            <tr>
              <th class="table-form_tableHeader">
                <span>メールアドレス（ID）</span>
              </th>
              <td class="table-form_tableData">
                <input class="textarea" type="text" name="user[mail_address]" value="<%= @mail_address %>">
              </td>
            </tr>
            <tr>
              <th class="table-form_tableHeader">
                <span>パスワード</span>
              </th>
              <td class="table-form_tableData">
                <input class="textarea" type="password" name="user[password]" value="<%= @password %>">
              </td>
            </tr>
          </table>
          <div class="t-c mt-40">
            <input class="button" type="submit" value="ログイン">
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
<%= render 'home/footer' %>
