<%= render 'home/form' %>
<div class="top-image">
  <div class="top-background">
    <div class="message">
      <h2>ERP導入までの道のりに、<br>みんなの口コミを。</h2>
      <div class="search-box">
        <input value="システム名で検索する">
        <div><%= image_tag('search.jpg') %></div>
      </div>
    </div>
  </div>
</div>
<div class="main">
  <div class="container">
    <div class="searchIMG"><%= image_tag('カテゴリ.jpg') %></div>
    <h2>業務領域から探す</h2>
    <% @business_types.each do |business_type| %>
      <div class="item-box">
        <a href="/vendors/index">
          <figure>
            <%= image_tag("businessTypeItem/#{business_type.id}.jpg") %>
            <figcaption><%= "#{business_type.name}"%></figcaption>
          </figure>
        </a>
      </div>
    <% end %>
  </div>
</div>
<div class="main">
  <div class="container">
    <div class="searchIMG"><%= image_tag('業界.jpg') %></div>
    <h2>所属している業界から探す</h2>
    <div class="item-box">
      <a href="/vendors/index">
        <figure>
          <%= image_tag('製造・原価管理.jpg') %>
          <figcaption>メーカー</figcaption>
        </figure>
      </a>
      <a href="/vendors/index">
        <figure>
          <%= image_tag('販売・購買管理.jpg') %>
          <figcaption>商社・卸売</figcaption>
        </figure>
      </a>
      <a href="/vendors/index">
        <figure>
          <%= image_tag('建設工事.jpg') %>
          <figcaption>建設工事</figcaption>
        </figure>
      </a>
    </div>
    <div class="item-box">
      <a href="/vendors/index">
        <figure>
          <%= image_tag('小売.jpg') %>
          <figcaption>小売・流通</figcaption>
        </figure>
      </a>
      <a href="/vendors/index">
        <figure>
          <%= image_tag('不動産管理.jpg') %>
          <figcaption>不動産関連</figcaption>
        </figure>
      </a>
      <a href="/vendors/index">
        <figure>
          <%= image_tag('物流.jpg') %>
          <figcaption>運輸・物流</figcaption>
        </figure>
      </a>
    </div>
    <div class="item-box">
      <a href="/vendors/index">
        <figure>
          <%= image_tag('情報サービス.jpg') %>
          <figcaption>情報サービス</figcaption>
        </figure>
      </a>
      <a href="/vendors/index">
        <figure>
          <%= image_tag('金融.jpg') %>
